<div class="article-form">
  <div class="hashtag-main">
    <h1 class="article-form-title">検索結果</h1>

<% if @articles.length !=0 %>
       <ul class="hashtag-lists">
        <% @articles.reverse.each do |article| %>
     <li class='list'>
       <%=link_to article_path(article.id) do %>
       <div class="article-info">
         <h2 class="hash-title"><%= truncate(article.title, length: 8) %></h2>
         <p class="writer"><%= article.user.nickname %></p>
       </div>
       <div class='article-img-content'>
          <%= image_tag article.images.first, class: "article-img"%>
       </div>
       <% end %>
     </li>
     <% end %>
    </ul>
 <% else %>
   <div class="no-article">
    <p class="no-article-message">該当する記録はありません</p>
    </div>
   <% end %>


   <div class="return-home">
    <%= link_to "HOME", root_path, class: "home" %>
   </div>
  </div>
  <footer class="article-form-footer">
   <%= link_to image_tag("logo.png", class:"footer-logo"), "/" %>
  </footer>
</div>