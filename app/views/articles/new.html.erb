
<div class="article-form">

  <div class="article-form-main">
   <h1 class="article-form-title">
    ノートを作成
   </h1>
   <%= form_with model: @article, class: "article-main", local: true do |f| %>
   <%= render "shared/error_messages", model: f.object %>

   <div class="article-contents">
    <label class="form-text">タイトル</label>
    <span class="indispensable">必須</span>
    <%= f.text_field :title, class:"input-form", placeholder:"タイトルを入力" %>
   </div>

   <div class="article-contents">
    <label class="form-text">カテゴリー</label>
    <span class="indispensable">必須</span>
    <%= f.collection_select(:category_id, Category.all,:id, :name, {}, {class:"select-box"}) %>
   </div>

  
  <div class="contents-wrapper">
   <div class="article-contents">
    <label class="form-text">日付</label>
    <span class="indispensable">必須</span>
    <%= f.date_select :date, use_month_numbers: true %>
   </div>
   <div class="flex-contents">
    <label class="form-text">時間帯</label>
    <span class="indispensable">必須</span>
    <%= f.collection_select(:time_zone_id, TimeZone.all,:id, :name, {}, {class:"select-box"}) %>
   </div>
  </div>
  
   <div class="image-contents">
   <p class="guide">-最大3枚までアップロード出来ます-</p>
    <span class="indispensable">必須</span>
    <%= f.file_field :images, name: 'article[images][]',id: "article_image" %>
    <div id="image_list", class="image-list"></div>
   </div>

  <div class="contents-wrapper">
   <div class="article-contents">
    <label class="form-text">都道府県</label>
    <span class="indispensable">必須</span>
    <%= f.collection_select(:prefecture_id, Prefecture.all,:id, :name, {}, {class:"select-box"}) %>
   </div>
   <div class="flex-contents">
    <label class="form-text">住所</label>
    <span class="indispensable">必須</span>
    <%= f.text_field :address, class:"input-form", placeholder:"市区町村以降を入力", maxlength:"50" %>
   </div>
  </div>

  <p class="guide">-星をクリックして評価してください-</p>
  <div class="rate-contents">
   <div class="rate-form" id="parking">
    <%= f.label :parking,'駐車場', class:'rate-contents'%>
    <%= f.hidden_field :parking, id: :review_star %>
   </div>

   <div class="rate-form" id="toilet">
    <%= f.label :toilet,'トイレ', class:'rate-contents'%>
    <%= f.hidden_field :toilet, id: :review_star %>
   </div>

   <div class="rate-form" id="crowd">
    <%= f.label :crowd,'混雑度', class:'rate-contents'%>
    <%= f.hidden_field :crowd, id: :review_star %>
   </div>
  </div>
   <%= render 'rating'%>
 
   <div class="article-contents">
    <label class="form-text">タグ</label>
    <%= f.text_field :hashbody, class:"input-form", placeholder:"例) #サバ #アジ" %>
   </div>

   <div class="article-contents">
    <label class="form-text">メモ</label>
    <%= f.text_area :text, class:"text-form", placeholder:"メモを入力" %>
   </div>
   
  <div class="article-post">
    <%= f.submit "記録", class:"post-btn" %>
  </div>
 </div>

   <footer class="article-form-footer">
  <%= link_to image_tag("logo.png", class:"footer-logo"), "/" %>
  </footer>
</div>
 <% end %>

