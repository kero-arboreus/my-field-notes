<% if user_signed_in? %>
      <% favorite = current_user.favorites.find_by(article_id: article.id) %>
      <% if favorite.present? %>
         <%= link_to("/articles/#{article.id}/favorites/#{favorite.id}", method: :delete, id: "fav_button", remote: true) do %>
         <i class="far fa-heart nolike"> LIKE</i><br>
         <% end %>
      <% else %>
        <%= link_to("/articles/#{article.id}/favorites", method: :post, id: "fav_button", remote: true) do %>
        <i class="fas fa-heart like"> LIKE</i><br>
        <% end %>
      <% end %>
    <% end %>