<%= render "shared/header"%>
<div class="form-wrap">
  <div class="form-left">
   <h2 class="form-title">Sign up</h2>
   <%= image_tag 'bear.png', class: 'bear' %>
  </div>

<%= form_with model: @user, url: user_registration_path, class: "registration-main", local: true do |f| %>
  <%= render "shared/error_messages", model: f.object %>
  
  <div class="form-group">
     <label class="form-text">ニックネーム</label>
     <span class="indispensable">必須</span>
    <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:" 例) kerokero ", maxlength:"30" %>
  </div>

  <div class="form-group">
     <label class="form-text">メールアドレス</label>
     <span class="indispensable">必須</span>
    <%= f.email_field :email, class:"input-default", id:"email", maxlength:"30" %>
  </div>

  <div class="form-group">
     <label class="form-text">パスワード</label>
     <span class="indispensable">必須</span>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:" 6文字以上の半角英数字 " %>
  </div>

  <div class="form-group">
     <label class="form-text">パスワード(確認)</label>
     <span class="indispensable">必須</span>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password_confirmation", placeholder:" 同じパスワードを入力してください " %>
  </div>

  <div class="register">
    <%= f.submit "登録", class:"register-btn" %>
  </div>
<% end %>

</div>
<%= render "shared/footer" %>
