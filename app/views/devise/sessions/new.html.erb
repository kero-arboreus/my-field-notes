<%= render "shared/header"%>
<div class="form-wrap">
  <div class="form-left">
   <h2 class="login-title">Log in</h2>
   <%= image_tag 'tanuki.png', class: 'tanuki' %>
  </div>

<%= form_with model: @user, url: user_session_path, class: "registration-main", local: true do |f| %>

 <div class="login-flash-message">
    <%= flash[:notice] %>
    <%= flash[:alert] %>
 </div>

  <div class="form-group">
    <div class="form-text-wrap">
     <label class="form-text">メールアドレス</label>
     <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", maxlength:"30" %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
     <label class="form-text">パスワード</label>
     <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:" 6文字以上の半角英数字" %>
  </div>

  <div class="register">
    <%= f.submit "ログイン", class:"register-btn" %>
  </div>
<% end %>

</div>
<%= render "shared/footer" %>
